<?xml version="1.0" ?>
<sdf version="1.8">
  <world name="cyberbrick_world">
    
    <!-- Physics -->
    <physics name="1ms" type="ignored">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
    </physics>

    <!-- Required plugins for Ignition Gazebo -->
    <plugin filename="ignition-gazebo-physics-system" name="ignition::gazebo::systems::Physics"/>
    <plugin filename="ignition-gazebo-user-commands-system" name="ignition::gazebo::systems::UserCommands"/>
    <plugin filename="ignition-gazebo-scene-broadcaster-system" name="ignition::gazebo::systems::SceneBroadcaster"/>

    <!-- Lighting -->
    <light type="directional" name="sun">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>0.8 0.8 0.8 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 0.1 -0.9</direction>
    </light>

    <!-- Ground plane -->
    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>10 10</size>
            </plane>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>10 10</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Table for objects -->
    <model name="table">
      <static>true</static>
      <pose>0.5 0 0.25 0 0 0</pose>
      <link name="link">
        <collision name="surface">
          <geometry>
            <box>
              <size>0.6 0.4 0.02</size>
            </box>
          </geometry>
        </collision>
        <visual name="surface">
          <geometry>
            <box>
              <size>0.6 0.4 0.02</size>
            </box>
          </geometry>
          <material>
            <ambient>0.6 0.4 0.2 1</ambient>
            <diffuse>0.6 0.4 0.2 1</diffuse>
          </material>
        </visual>
        <!-- Table legs -->
        <collision name="leg1">
          <pose>0.25 0.15 -0.125 0 0 0</pose>
          <geometry><box><size>0.04 0.04 0.25</size></box></geometry>
        </collision>
        <visual name="leg1">
          <pose>0.25 0.15 -0.125 0 0 0</pose>
          <geometry><box><size>0.04 0.04 0.25</size></box></geometry>
          <material><ambient>0.4 0.3 0.2 1</ambient><diffuse>0.4 0.3 0.2 1</diffuse></material>
        </visual>
        <collision name="leg2">
          <pose>-0.25 0.15 -0.125 0 0 0</pose>
          <geometry><box><size>0.04 0.04 0.25</size></box></geometry>
        </collision>
        <visual name="leg2">
          <pose>-0.25 0.15 -0.125 0 0 0</pose>
          <geometry><box><size>0.04 0.04 0.25</size></box></geometry>
          <material><ambient>0.4 0.3 0.2 1</ambient><diffuse>0.4 0.3 0.2 1</diffuse></material>
        </visual>
        <collision name="leg3">
          <pose>0.25 -0.15 -0.125 0 0 0</pose>
          <geometry><box><size>0.04 0.04 0.25</size></box></geometry>
        </collision>
        <visual name="leg3">
          <pose>0.25 -0.15 -0.125 0 0 0</pose>
          <geometry><box><size>0.04 0.04 0.25</size></box></geometry>
          <material><ambient>0.4 0.3 0.2 1</ambient><diffuse>0.4 0.3 0.2 1</diffuse></material>
        </visual>
        <collision name="leg4">
          <pose>-0.25 -0.15 -0.125 0 0 0</pose>
          <geometry><box><size>0.04 0.04 0.25</size></box></geometry>
        </collision>
        <visual name="leg4">
          <pose>-0.25 -0.15 -0.125 0 0 0</pose>
          <geometry><box><size>0.04 0.04 0.25</size></box></geometry>
          <material><ambient>0.4 0.3 0.2 1</ambient><diffuse>0.4 0.3 0.2 1</diffuse></material>
        </visual>
      </link>
    </model>

    <!-- Red cube (target object) -->
    <model name="red_cube">
      <pose>0.4 0.1 0.28 0 0 0</pose>
      <link name="link">
        <inertial>
          <mass>0.05</mass>
          <inertia>
            <ixx>0.0001</ixx>
            <iyy>0.0001</iyy>
            <izz>0.0001</izz>
          </inertia>
        </inertial>
        <collision name="collision">
          <geometry>
            <box>
              <size>0.04 0.04 0.04</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>0.04 0.04 0.04</size>
            </box>
          </geometry>
          <material>
            <ambient>1 0 0 1</ambient>
            <diffuse>1 0 0 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Blue cube -->
    <model name="blue_cube">
      <pose>0.5 -0.1 0.28 0 0 0</pose>
      <link name="link">
        <inertial>
          <mass>0.05</mass>
          <inertia>
            <ixx>0.0001</ixx>
            <iyy>0.0001</iyy>
            <izz>0.0001</izz>
          </inertia>
        </inertial>
        <collision name="collision">
          <geometry>
            <box>
              <size>0.04 0.04 0.04</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>0.04 0.04 0.04</size>
            </box>
          </geometry>
          <material>
            <ambient>0 0 1 1</ambient>
            <diffuse>0 0 1 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Green cube -->
    <model name="green_cube">
      <pose>0.6 0.05 0.28 0 0 0</pose>
      <link name="link">
        <inertial>
          <mass>0.05</mass>
          <inertia>
            <ixx>0.0001</ixx>
            <iyy>0.0001</iyy>
            <izz>0.0001</izz>
          </inertia>
        </inertial>
        <collision name="collision">
          <geometry>
            <box>
              <size>0.04 0.04 0.04</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>0.04 0.04 0.04</size>
            </box>
          </geometry>
          <material>
            <ambient>0 1 0 1</ambient>
            <diffuse>0 1 0 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- CyberBrick Arm (3 DOF) -->
    <model name="cyberbrick_arm">
      <static>false</static>
      <pose>0.5 0.1 0.27 0 0 0</pose>
      
      <!-- Base (fixed to world) -->
      <link name="arm_base">
        <inertial>
          <mass>0.2</mass>
          <inertia><ixx>0.0001</ixx><iyy>0.0001</iyy><izz>0.0001</izz></inertia>
        </inertial>
        <collision name="collision">
          <geometry><cylinder><radius>0.03</radius><length>0.02</length></cylinder></geometry>
        </collision>
        <visual name="visual">
          <geometry><cylinder><radius>0.03</radius><length>0.02</length></cylinder></geometry>
          <material><ambient>0.3 0.3 0.3 1</ambient><diffuse>0.3 0.3 0.3 1</diffuse></material>
        </visual>
      </link>

      <!-- Link 1 (rotazione base) -->
      <link name="link1">
        <pose relative_to="arm_base">0 0 0.025 0 0 0</pose>
        <inertial>
          <mass>0.1</mass>
          <inertia><ixx>0.0001</ixx><iyy>0.0001</iyy><izz>0.0001</izz></inertia>
        </inertial>
        <collision name="collision">
          <pose>0.03 0 0 0 1.5707 0</pose>
          <geometry><cylinder><radius>0.015</radius><length>0.06</length></cylinder></geometry>
        </collision>
        <visual name="visual">
          <pose>0.03 0 0 0 1.5707 0</pose>
          <geometry><cylinder><radius>0.015</radius><length>0.06</length></cylinder></geometry>
          <material><ambient>0.8 0.4 0.1 1</ambient><diffuse>0.8 0.4 0.1 1</diffuse></material>
        </visual>
      </link>

      <!-- Link 2 (spalla) -->
      <link name="link2">
        <pose relative_to="link1">0.06 0 0 0 0 0</pose>
        <inertial>
          <mass>0.08</mass>
          <inertia><ixx>0.0001</ixx><iyy>0.0001</iyy><izz>0.0001</izz></inertia>
        </inertial>
        <collision name="collision">
          <pose>0.03 0 0 0 1.5707 0</pose>
          <geometry><cylinder><radius>0.012</radius><length>0.06</length></cylinder></geometry>
        </collision>
        <visual name="visual">
          <pose>0.03 0 0 0 1.5707 0</pose>
          <geometry><cylinder><radius>0.012</radius><length>0.06</length></cylinder></geometry>
          <material><ambient>0.8 0.5 0.1 1</ambient><diffuse>0.8 0.5 0.1 1</diffuse></material>
        </visual>
      </link>

      <!-- Link 3 (gomito) + gripper -->
      <link name="link3">
        <pose relative_to="link2">0.06 0 0 0 0 0</pose>
        <inertial>
          <mass>0.05</mass>
          <inertia><ixx>0.00005</ixx><iyy>0.00005</iyy><izz>0.00005</izz></inertia>
        </inertial>
        <collision name="collision">
          <pose>0.025 0 0 0 1.5707 0</pose>
          <geometry><cylinder><radius>0.01</radius><length>0.05</length></cylinder></geometry>
        </collision>
        <visual name="visual">
          <pose>0.025 0 0 0 1.5707 0</pose>
          <geometry><cylinder><radius>0.01</radius><length>0.05</length></cylinder></geometry>
          <material><ambient>0.8 0.6 0.1 1</ambient><diffuse>0.8 0.6 0.1 1</diffuse></material>
        </visual>
        <!-- Gripper visualization -->
        <visual name="gripper_left">
          <pose>0.05 0.015 0 0 0 0</pose>
          <geometry><box><size>0.03 0.005 0.015</size></box></geometry>
          <material><ambient>0.2 0.2 0.2 1</ambient><diffuse>0.2 0.2 0.2 1</diffuse></material>
        </visual>
        <visual name="gripper_right">
          <pose>0.05 -0.015 0 0 0 0</pose>
          <geometry><box><size>0.03 0.005 0.015</size></box></geometry>
          <material><ambient>0.2 0.2 0.2 1</ambient><diffuse>0.2 0.2 0.2 1</diffuse></material>
        </visual>
      </link>

      <!-- Fix base to world -->
      <joint name="arm_fixed" type="fixed">
        <parent>world</parent>
        <child>arm_base</child>
      </joint>

      <!-- Joint 1: Base rotation -->
      <joint name="joint1" type="revolute">
        <parent>arm_base</parent>
        <child>link1</child>
        <axis>
          <xyz>0 0 1</xyz>
          <limit><lower>-1.57</lower><upper>1.57</upper></limit>
        </axis>
      </joint>

      <!-- Joint 2: Shoulder -->
      <joint name="joint2" type="revolute">
        <parent>link1</parent>
        <child>link2</child>
        <axis>
          <xyz>0 1 0</xyz>
          <limit><lower>-0.78</lower><upper>2.35</upper></limit>
        </axis>
      </joint>

      <!-- Joint 3: Elbow -->
      <joint name="joint3" type="revolute">
        <parent>link2</parent>
        <child>link3</child>
        <axis>
          <xyz>0 1 0</xyz>
          <limit><lower>-2.35</lower><upper>0.78</upper></limit>
        </axis>
      </joint>

      <!-- Joint Position Controller Plugin -->
      <plugin filename="libignition-gazebo-joint-position-controller-system.so" 
              name="ignition::gazebo::systems::JointPositionController">
        <joint_name>joint1</joint_name>
        <topic>/arm/joint1</topic>
        <p_gain>10</p_gain>
        <i_gain>0.1</i_gain>
        <d_gain>0.5</d_gain>
      </plugin>
      <plugin filename="libignition-gazebo-joint-position-controller-system.so" 
              name="ignition::gazebo::systems::JointPositionController">
        <joint_name>joint2</joint_name>
        <topic>/arm/joint2</topic>
        <p_gain>10</p_gain>
        <i_gain>0.1</i_gain>
        <d_gain>0.5</d_gain>
      </plugin>
      <plugin filename="libignition-gazebo-joint-position-controller-system.so" 
              name="ignition::gazebo::systems::JointPositionController">
        <joint_name>joint3</joint_name>
        <topic>/arm/joint3</topic>
        <p_gain>10</p_gain>
        <i_gain>0.1</i_gain>
        <d_gain>0.5</d_gain>
      </plugin>

    </model>

    <!-- CyberBrick Robot -->
    <model name="cyberbrick">
      <pose>-0.3 0 0.05 0 0 0</pose>
      
      <link name="base_link">
        <inertial>
          <mass>0.5</mass>
          <inertia>
            <ixx>0.001</ixx><ixy>0</ixy><ixz>0</ixz>
            <iyy>0.001</iyy><iyz>0</iyz>
            <izz>0.001</izz>
          </inertia>
        </inertial>
        <collision name="collision">
          <geometry><box><size>0.15 0.10 0.05</size></box></geometry>
        </collision>
        <visual name="visual">
          <geometry><box><size>0.15 0.10 0.05</size></box></geometry>
          <material><ambient>0.2 0.2 0.8 1</ambient><diffuse>0.2 0.2 0.8 1</diffuse></material>
        </visual>
      </link>

      <link name="left_wheel">
        <pose relative_to="base_link">0 0.06 -0.025 -1.5707 0 0</pose>
        <inertial>
          <mass>0.1</mass>
          <inertia><ixx>0.0001</ixx><iyy>0.0001</iyy><izz>0.0001</izz></inertia>
        </inertial>
        <collision name="collision">
          <geometry><cylinder><radius>0.025</radius><length>0.02</length></cylinder></geometry>
        </collision>
        <visual name="visual">
          <geometry><cylinder><radius>0.025</radius><length>0.02</length></cylinder></geometry>
          <material><ambient>0.1 0.1 0.1 1</ambient><diffuse>0.1 0.1 0.1 1</diffuse></material>
        </visual>
      </link>

      <link name="right_wheel">
        <pose relative_to="base_link">0 -0.06 -0.025 -1.5707 0 0</pose>
        <inertial>
          <mass>0.1</mass>
          <inertia><ixx>0.0001</ixx><iyy>0.0001</iyy><izz>0.0001</izz></inertia>
        </inertial>
        <collision name="collision">
          <geometry><cylinder><radius>0.025</radius><length>0.02</length></cylinder></geometry>
        </collision>
        <visual name="visual">
          <geometry><cylinder><radius>0.025</radius><length>0.02</length></cylinder></geometry>
          <material><ambient>0.1 0.1 0.1 1</ambient><diffuse>0.1 0.1 0.1 1</diffuse></material>
        </visual>
      </link>

      <link name="caster">
        <pose relative_to="base_link">0.055 0 -0.0375 0 0 0</pose>
        <inertial>
          <mass>0.05</mass>
          <inertia><ixx>0.00001</ixx><iyy>0.00001</iyy><izz>0.00001</izz></inertia>
        </inertial>
        <collision name="collision">
          <geometry><sphere><radius>0.0125</radius></sphere></geometry>
          <surface><friction><ode><mu>0</mu><mu2>0</mu2></ode></friction></surface>
        </collision>
        <visual name="visual">
          <geometry><sphere><radius>0.0125</radius></sphere></geometry>
          <material><ambient>0.9 0.9 0.9 1</ambient><diffuse>0.9 0.9 0.9 1</diffuse></material>
        </visual>
      </link>

      <joint name="left_wheel_joint" type="revolute">
        <parent>base_link</parent>
        <child>left_wheel</child>
        <axis><xyz>0 0 1</xyz></axis>
      </joint>

      <joint name="right_wheel_joint" type="revolute">
        <parent>base_link</parent>
        <child>right_wheel</child>
        <axis><xyz>0 0 1</xyz></axis>
      </joint>

      <joint name="caster_joint" type="ball">
        <parent>base_link</parent>
        <child>caster</child>
      </joint>

      <plugin filename="libignition-gazebo-diff-drive-system.so" name="ignition::gazebo::systems::DiffDrive">
        <left_joint>left_wheel_joint</left_joint>
        <right_joint>right_wheel_joint</right_joint>
        <wheel_separation>0.12</wheel_separation>
        <wheel_radius>0.025</wheel_radius>
        <topic>/cmd_vel</topic>
      </plugin>

    </model>

  </world>
</sdf>
